{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "../dist/"
  },
  "compileOnSave": true,
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}